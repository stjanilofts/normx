.Cards
	margin 0 auto
	lost-utility clearfix;
	max-width $max-width

.Card
	position relative
	overflow hidden
	lost-waffle 1/4 4 gutter
	background white
	text-decoration none
	color $body-color
	&:hover, &:focus
		color $body-color
	+medium()
		lost-waffle 1/3 3
	+small()
		lost-waffle 1/2 2
	/*+xsmall()
		lost-waffle 1/2 2 0px*/
	&__contents
		padding gutter
		border 2px solid $blue
	&__overlay
		opacity 0
		position absolute
		background $orange-lite2
		top 0
		left 0
		right 0
		bottom 0
		transition opacity 0.25s
		&:hover
			opacity 0.25
			transition opacity 0.25s
	&__image
		line-height 1
		display flex
		align-items center
		justify-content center
		img 
			max-width 100%
	&__text
		padding-top gutter
		h1,h2,h3,h4,h5,h6
			&:first-of-type
				text-align center
				line-height 1.1em
				font-size 1.1em
				font-weight normal !important
				padding 0
				margin 0